<!DOCTYPE html>
<html>
<head>
  <title><%= article.title %></title>
  <!-- ADD META TAGS w/ author and such for citing purposes -->
  <!-- Add citation on bottom !!! -->
  <!-- add other fancy footer stuff -->

  <link rel="stylesheet" href="/themes/<%= theme %>.css">
  <link rel="stylesheet" href="/css/style.css">

  <style>
  .txt {
    font-size: 1.3em;
    line-height: 1.5em;
    font-family: 'Lato';
  }
  .img-responsive {
    margin: auto;
  }
  .buffer {
    height: calc(10vh);
    width: calc(100vw);
  }
  </style>

  <meta charset="UTF-8">
  <meta name="description" content="<%= article.title %>">
  <meta name="keywords" content="<%= article.urlTitle.replace(/-/g , ','); %>">
  <meta name="author" content="<%= article.author %>">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>

  <% include ./partials/nav %>

  <img class="img-responsive" src="/<%= article.headerImg %>">

  <div class="buffer"></div>

  <div class="container">
    <div class="row">
      <div class="col-lg-2 col-sm-3"></div>
      <div class="col-lg-9 col-sm-9 col-xs-12">
        <h1 class="text-center"><%= article.title %></h1><br>
      </div>
      <div class="col-lg-1"></div>
    </div>
    <div class="row">
      <div class="col-lg-2 col-sm-3">
        <p class="txt">
          Published in <a target="_blank" href="<%= urlBase %>/categories/<%= article.category %>"><%= article.category %></a><br>
          By <%= article.author %><br>
          On <%= article.datePublished %>
        </p>
      </div>

      <div class="buffer hidden-sm hidden-lg"></div>

      <div class="col-lg-9 col-sm-9 col-xs-12 txt">
        <%- article.content %>
      </div>

      <div class="col-lg-1"></div>
    </div>
  </div>

  <div class="buffer"></div>

  <% include ./partials/footer %>

  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script>
  $('#search').keydown(function(event) {
    if (event.keyCode == 13) {
      this.form.submit();
      return false;
    }
  });
  </script>

</body>
</html>
